<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BhammerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHighlight">@color/primary_color_ap_80</item>

        <item name="android:actionBarStyle">@style/Bhammer.ActionBar</item>
        <item name="android:editTextStyle">@style/Bhammer.EditText</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:seekBarStyle">@style/SeekBarBhammer</item>
        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle</item>
        <item name="android:textCursorDrawable">@color/primary_color_ap_80</item>

        <item name="datePickerStyle">@style/Widget.Holo.DatePicker</item>
        <item name="numberPickerStyle">@style/NPWidget.Holo.NumberPicker</item>

        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>

        <item name="android:dialogTheme">@style/BhammerThemeDialog</item>
        <item name="android:alertDialogTheme">@style/BhammerThemeDialog</item>

    </style>

    <style name="BhammerThemeDialog" parent="Theme.AppCompat.Dialog">

        <item name="android:textColorHighlight">@color/primary_color_ap_80</item>

        <item name="android:actionBarStyle">@style/Bhammer.ActionBar</item>
        <item name="android:editTextStyle">@style/Bhammer.EditText</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:seekBarStyle">@style/SeekBarBhammer</item>

        <item name="android:textSelectHandleLeft">@drawable/text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/text_select_handle_middle</item>
        <item name="android:textCursorDrawable">@color/primary_color_ap_80</item>

        <item name="colorAccent">@color/accent_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>

    </style>

</resources>