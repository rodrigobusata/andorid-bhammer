<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bhammer" />

    <style name="Bhammer.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary_color</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="theme">@style/ThemeOverlay.Bhammer.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ThemeOverlay.Bhammer.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Bhammer.Button" parent="@android:style/Widget.Button">
        <item name="android:minWidth">@dimen/btn_min_width</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:paddingLeft">@dimen/btn_padding</item>
        <item name="android:paddingRight">@dimen/btn_padding</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_margin</item>
    </style>

    <style name="Bhammer.Button.Raised" parent="Bhammer.Button">
        <item name="android:background">@drawable/btn_raised_selector</item>
        <item name="android:textColor">@color/btn_raised_selector</item>
    </style>

    <style name="Bhammer.Button.Flat" parent="Bhammer.Button">
        <item name="android:background">@drawable/btn_flat_selector</item>
        <item name="android:textColor">@color/btn_flat_selector</item>
    </style>

    <style name="Bhammer.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <style name="Theme.Dialog.Alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NPWidget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
    </style>

    <style name="NPWidget.Holo.NumberPicker" parent="NPWidget.NumberPicker">
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@color/accent_color</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">180dip</item>
    </style>

    <style name="NPWidget.Holo.Light.NumberPicker" parent="NPWidget.Holo.NumberPicker"/>

    <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="Widget.DatePicker">
        <item name="dp_calendarViewShown">false</item>
    </style>

    <style name="Widget.Holo.DatePicker" parent="Widget.DatePicker">
        <item name="dp_internalLayout">@layout/date_picker_holo</item>
        <item name="dp_calendarViewShown">true</item>
    </style>

    <style name="Widget.Holo.Light.DatePicker" parent="Widget.Holo.DatePicker" />

    <style name="SeekBarBhammer" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_hor_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_hor_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <!--SNACKBAR-->
    <style name="Snackbar"/>

    <style name="Snackbar.Text">
        <item name="android:paddingBottom">@dimen/sb__text_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/sb__text_padding_left</item>
        <item name="android:paddingTop">@dimen/sb__text_padding_top</item>
        <item name="android:paddingRight">@dimen/sb__text_padding_right</item>
        <item name="android:textSize">@dimen/sb__text_size</item>
        <item name="android:textColor">@color/sb__text_color</item>
    </style>

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sb__action_text_color</item>
        <item name="android:background">@drawable/sb__btn_bg</item>
    </style>
    <!--END-->

</resources>